<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration>

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{1} %m %n" />
<!--            <param name="ConversionPattern" value="%m" />-->
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="TRACE" />
            <param name="LevelMax" value="WARN" />
        </filter>
    </appender>

    <appender name="STDERR" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.err" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{1} %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="ERROR" />
            <param name="LevelMax" value="FATAL" />
        </filter>
    </appender>

    <appender name="PORTFOLIO" class="org.apache.log4j.FileAppender">
        <param name="file" value="log/portfolio.csv" />
        <param name="append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss},%m %n" />
        </layout>
    </appender>

    <appender name="INDICATOR" class="org.apache.log4j.FileAppender">
        <param name="file" value="log/indicator.csv" />
        <param name="append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m %n" />
        </layout>
    </appender>

<!--     <appender name="SUBSCRIBER" class="org.apache.log4j.FileAppender"> -->
<!--         <param name="file" value="log/subscriber.log" /> -->
<!--         <param name="append" value="false" /> -->
<!--         <layout class="org.apache.log4j.PatternLayout"> -->
<!--             <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss},%m %n" /> -->
<!--         </layout> -->
<!--     </appender>     -->

    <appender name="SOCKET" class="org.apache.log4j.net.SocketAppender">
        <param name="RemoteHost" value="localhost" />
    </appender>

    <logger name="org.springframework">
        <level value="warn" />
    </logger>

    <logger name="org.hibernate">
        <level value="warn" />
    </logger>

    <!-- logs error messages that are also logged by HibernateInterceptor -->
    <logger name="org.hibernate.event.def.AbstractFlushingEventListener">
        <level value="FATAL"/>
    </logger>

    <!-- logs error messages that are also logged by HibernateInterceptor -->
    <logger name="org.hibernate.util.JDBCExceptionReporter">
        <level value="FATAL"/>
    </logger>

    <logger name="org.apache.commons">
        <level value="warn" />
    </logger>

    <logger name="net.sf.ehcache">
        <level value="warn" />
    </logger>

    <logger name="com.espertech">
        <level value="warn" />
    </logger>

    <logger name="httpclient">
        <level value="warn" />
    </logger>

    <logger name="org.apache.activemq">
        <level value="warn" />
    </logger>

    <logger name="org.mortbay">
        <level value="warn" />
    </logger>

    <logger name="com.mchange.v2">
        <level value="warn" />
    </logger>

    <logger name="org.apache.log4j.jmx">
        <level value="warn" />
    </logger>

    <logger name="org.hibernate.engine.StatefulPersistenceContext.ProxyWarnLog">
        <level value="error" />
    </logger>

    <logger name="org.springframework.beans.factory.support.DisposableBeanAdapter">
        <level value="error" />
    </logger>

    <logger name="com.espertech.esper.util.MethodResolver">
        <level value="error" />
    </logger>

    <logger name="com.algoTrader.esper.subscriber.PrintPortfolioValueSubscriber" additivity="false">
        <level value="info" />
        <appender-ref ref="PORTFOLIO" />
    </logger>

    <logger name="com.algoTrader.service.SimulationServiceImpl.RESULT" >
        <level value="info" />
<!--         <appender-ref ref="SOCKET" /> -->
    </logger>

    <logger name="com.algoTrader.esper.subscriber.IndicatorSubscriber" additivity="false">
        <level value="info" />
        <appender-ref ref="INDICATOR" />
    </logger>

    <logger name="com.algoTrader.esper.listener.IndicatorListener" additivity="false">
        <level value="info" />
        <appender-ref ref="INDICATOR" />
    </logger>

<!--     <logger name="com.algoTrader.esper.subscriber.Subscriber"> -->
<!--         <level value="debug" /> -->
<!--         <appender-ref ref="SUBSCRIBER" /> -->
<!--     </logger> -->

    <root>
        <level value="debug" />
        <appender-ref ref="STDOUT" />
        <appender-ref ref="STDERR" />
    </root>

    <categoryFactory class="com.algoTrader.util.MyLoggerFactory" />

</log4j:configuration>
