    <engine-settings>
        <defaults>
            <threading>
                <internal-timer enabled="false" msec-resolution="100"/>
            </threading>
            <logging>
                <execution-path enabled="true" />
                <timer-debug enabled="true" />
            </logging>
            <expression udf-cache="false"/>
            <execution prioritized="true"/>
        </defaults>
    </engine-settings>

</esper-configuration>
