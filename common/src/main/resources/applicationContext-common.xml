<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- ============================= Properties Management ============================================ -->

    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <bean id="properties" class="com.algoTrader.util.spring.SystemPropertiesFactoryBean">
        <property name="locations">
            <list>
                <!--  defining conf.properties will allow overwrites by strategies -->
                <!--  files have to be defined in a subdirectory of classloader root otherwise they cannot be loaded from jars -->
                <value>classpath:/conf/conf.properties</value>
                <value>classpath*:/conf/conf-**.properties</value>
            </list>
        </property>
        <property name="systemPropertiesModeName"><value>SYSTEM_PROPERTIES_MODE_OVERRIDE</value></property>
    </bean>

    <!--  PropertyPlaceholderConfigurer to overwrite settings form commandline -->
    <bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties" ref="properties" />
        <property name="systemPropertiesModeName"><value>SYSTEM_PROPERTIES_MODE_NEVER</value></property>
    </bean>

    <bean id="configuration" class="com.algoTrader.util.spring.Configuration"/>

    <bean class="com.algoTrader.util.spring.EntityAnnotationSetter" init-method="init"/>

    <!-- =========================================== JMX ================================================ -->

    <bean id="exporter" class="org.springframework.jmx.export.annotation.AnnotationMBeanExporter"/>

   <!-- Diagrams for Management Service (and PropertyConfiguratet for java.util.Date)-->
    <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="propertyEditorRegistrars">
            <list>
               <bean class="com.algoTrader.util.spring.DatePropertyEditorRegistrar"/>
            </list>
        </property>
    </bean>
</beans>
