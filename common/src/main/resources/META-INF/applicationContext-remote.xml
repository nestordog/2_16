<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- =========================================== JMS ================================================ -->

    <!-- JMS ActiveMQ Connection Factory -->
    <bean id="jmsActiveMQFactory" class="org.springframework.jms.connection.SingleConnectionFactory">
        <property name="targetConnectionFactory">
            <bean class="org.apache.activemq.ActiveMQConnectionFactory">
                <property name="brokerURL" value="failover:tcp://${activeMQHost}:${activeMQPort}" />
            </bean>
        </property>
    </bean>

    <!--  FieldRetrievingFactoryBeans -->
    <bean id="javax.jms.Session.DUPS_OK_ACKNOWLEDGE" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean"/>
    <bean id="org.springframework.jms.listener.DefaultMessageListenerContainer.CACHE_CONSUMER" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean"/>

    <!-- ActiveMQ topic for markete data -->
    <bean id="marketDataTopic" class="org.apache.activemq.command.ActiveMQTopic">
        <constructor-arg value="MARKETDATA.TOPIC" />
    </bean>

    <!-- message listener for market data -->
    <bean id="marketDataMessageListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="jmsActiveMQFactory" />
        <property name="destination" ref="marketDataTopic" />
        <property name="messageListener" ref="eventDispatcher" />
        <property name="messageSelector" value="false"/>
        <property name="cacheLevel" ref="org.springframework.jms.listener.DefaultMessageListenerContainer.CACHE_CONSUMER"/>
    </bean>

    <!-- ActiveMQ topic for generic events -->
    <bean id="genericTopic" class="org.apache.activemq.command.ActiveMQTopic">
        <constructor-arg value="GENERIC.TOPIC" />
    </bean>

    <!-- Spring JMS Template used for generic events (that might be sent from strategy to strategy) -->
    <bean id="genericTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="jmsActiveMQFactory"/>
        <property name="defaultDestination" ref="genericTopic"/>
        <property name="timeToLive" value="10000"/>
        <property name="deliveryPersistent" value="false"/>
        <property name="messageIdEnabled" value="false"/>
        <property name="explicitQosEnabled" value="true" />
        <property name="sessionAcknowledgeMode" ref="javax.jms.Session.DUPS_OK_ACKNOWLEDGE"/>
    </bean>

    <!-- message listener for market data -->
    <bean id="genericMessageListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="jmsActiveMQFactory" />
        <property name="destination" ref="genericTopic" />
        <property name="messageListener" ref="eventDispatcher" />
        <property name="messageSelector" value="false"/>
        <property name="cacheLevel" ref="org.springframework.jms.listener.DefaultMessageListenerContainer.CACHE_CONSUMER"/>
    </bean>

    <!-- ActiveMQ queue for startegy specific messages  -->
    <!-- is defined in applicationContext-client.xml -->

    <!-- message listener for startegy specific messages -->
    <bean id="strategyMessageListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="jmsActiveMQFactory" />
        <property name="destination" ref="strategyQueue" />
        <property name="messageListener" ref="eventDispatcher" />
    </bean>

</beans>
